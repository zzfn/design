{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2015",
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./lib",
    "emitDeclarationOnly": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "./components",
    "paths": {
      "components": [
        "components/*"
      ]
    },
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "components/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "test",
    "node_modules",
    "components/styles/*",
    "components/**/style/*"
  ]
}
